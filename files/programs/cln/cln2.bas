10 "D": CLEAR : WAIT 118: PRINT "CALENDAR V.2.0"
20 DIM WD$(7):WD$(0)="SUNDAY":WD$(1)="MONDAY":WD$(2)="TUESDAY":WD$(3)="WEDNESDAY"
30 WD$(4)="THUSDAY":WD$(5)="FRIDAY":WD$(6)="SATURDAY"
40 INPUT "YEAR:";Y,"MONTH:";M,"DAY:";D
50 IF M<3 THEN LET Y=Y-1: LET M=M+12
60 LET M=M-2
70 LET W=(D+INT (31*M/12)+Y+INT (Y/4)-INT (Y/100)+INT (Y/400))
80 LET W=W-INT (W/7)*7
90 PRINT "WKDAY: ";WD$(W): WAIT : END
